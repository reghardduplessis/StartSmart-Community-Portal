 
 <%- include('../partials/header') %>

<style>
   
        .card-container {
            display: flex;
            gap: 150px; 
            padding: 1rem;
            justify-content: center; /* Centers cards horizontally */
            min-height: 50vh; /* Full viewport height to center vertically on page */
            margin: 0 auto; /* Centers container horizontally */
            width: 716px; /* Matches total width of two cards + gap */
           flex-wrap: nowrap; /* Prevents wrapping to keep cards side-by-side */
            
        }

        
        .card {
            width: 100%;
            max-width: 350px; /* Matches image width */
        }

        .welcome-container{
           width: 50%;
           text-align: center;
           margin: 0 auto; /* This centers the container horizontally */
           padding: 20px;
           color: black;
           border-radius: 8px;
             
        }
</style>

<!--Hero Section-->


<div class="welcome-container">
    <h1><%= title %></h1>
    <p><%= welcomeParagraph %></p>
</div>
    
    <div class="card-container d-flex gap-3 flex-wrap">
  <% if (upcomingEvents.length > 0) { %>
    <% upcomingEvents.forEach(event => { %>
      <div class="card" style="width: 270px;">
        <img src="<%= event.image %>" class="card-img-top" style="height: 150px;" alt="<%= event.title %>">
        <div class="card-body">
          <h5 style="font-size:20px">Upcoming Event</h5>
          <p class="card-text m-0"><strong>Title:</strong> <%= event.title %></p>
          <p class="card-text m-0"><strong>Date:</strong> <%= event.date %></p>
          <p class="card-text m-0"><strong>Location:</strong> <%= event.location %></p>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <p>No upcoming events.</p>
  <% } %>
</div>


<!--End Hero Section-->

<%- include('../partials/footer') %>